{
  "name": "xzerox-executor",
  "version": "1.0.8",
  "description": "Toolkit to simplify writing parsers, scrapers, bots and use HTTPs layer in order with parallel job execution in mind.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "mocha -r ts-node/register src/**/*.test.ts",
    "cover": "nyc npm run test",
    "cover-ci": "nyc --reporter=lcov npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0fuz/xzerox-executor.git"
  },
  "keywords": [
    "bot",
    "automator",
    "http",
    "browser",
    "parallel",
    "helpers"
  ],
  "author": "0fuz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0fuz/xzerox-executor/issues"
  },
  "homepage": "https://github.com/0fuz/xzerox-executor#readme",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/chai-http": "^4.2.0",
    "@types/mocha": "^8.2.0",
    "@types/nock": "^11.1.0",
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "nock": "^13.0.5",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@types/async": "^3.2.5",
    "@types/line-by-line": "^0.1.4",
    "@types/lodash": "^4.14.167",
    "@types/tunnel": "^0.0.1",
    "@types/uuid": "^8.3.0",
    "@types/yargs": "^15.0.12",
    "android-device-list": "^1.2.4",
    "async": "^3.2.0",
    "got": "^11.8.1",
    "hpagent": "^0.1.1",
    "line-by-line": "^0.1.6",
    "lodash": "^4.17.20",
    "tunnel": "^0.0.6",
    "uuid": "^3.4.0",
    "yargs": "^13.3.2"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "extension": [
      ".js",
      ".jsx",
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  }
}
